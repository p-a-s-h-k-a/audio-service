<h1>Add a new track</h1>

{{#if addError}}
   <div class="alert-errors">{{addError}}</div>
 {{/if}}

<form action="/tracks/create" method="POST" enctype="multipart/form-data">
  <div class="input-field">
    <input  id="name" name="name" type="text" class="validate" required value="{{data.name}}">
     <span class="helper-text" data-error="Input a track title"></span>
    <label for="name">Name of the track</label>
  </div>

  <div class="input-field">
    <input  id="artist" name="artist" type="text" class="validate" required value="{{data.artist}}">
     <span class="helper-text" data-error="Input an artist name"></span>
    <label for="artist">Artist name</label>
  </div>


  <div class="input-field">
    <input  id="description" name="description" type="text" class="validate" required value="{{data.description}}">
     <span class="helper-text" data-error="Input a description"></span>
    <label for="description">Description</label>
  </div>

 
   <div class="file-field input-field">
      <div class="btn">
        <span>Upload picture</span>
        <input type="file" name="img" accept="image/png, image/jpeg, image/jpg">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>

  
    <div class="file-field input-field">
      <div class="btn">
        <span>Upload audio</span>
        <input type="file" name="audio" accept="audio/ogg, audio/mpeg">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
 
    
  <button class="btn btn-primary">Submit</button>
</form>